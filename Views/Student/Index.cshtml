@model IEnumerable<Assignment8.Models.Student>

<div class="container p-3">
    <div class="d-flex justify-content-between">
        <div>
            <h2 class="text-primary text-dark">Student List</h2>
        </div>
        
        <form asp-controller="Student" asp-action="Index">
          <p>
             Student Name : <input placeholder="Search Name" type="text" name="SearchString" />
             <input type="submit" value="Filter">
         </p>
        </form> 
       
    </div>
    
     <a asp-controller="Student" asp-action="Create" class="text-center btn btn-primary col-12">
            Create New Student
        </a>
    </div>
    @if(Model.Count() > 0)
            {
                <table class="table table-bordered table-striped" style="width:100%">
                    <thead>
                        <tr>
                            <th>Student Name</th><th>Class</th><th></th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach(var obj1 in Model)
                {
                    <tr><td width="50%">@obj1.Name</td>
                    <td>@obj1.Class</td><td>
    <a class="btn btn-primary" asp-route-id="@obj1.StudentId" asp-controller="Student" asp-action="Edit">Edit</a>
    <a class="btn btn-primary" asp-route-id="@obj1.StudentId" asp-controller="Student" asp-action="Delete">Delete</a>
</td></tr>
                }
                    </tbody>
                </table>
            }
    else
    {
    <p> No student details.</p>
    }
    </div>